{
  "servers": {
    "jellyfin": {
      "type": "stdio",
      "command": "node",
      "args": [
        "/ABSOLUTE/PATH/TO/jellyfin_mcp/src/index.js"
      ],
      "env": {
        "JELLYFIN_API_URL": "http://YOUR_JELLYFIN_HOST:8096",
        "JELLYFIN_API_KEY": "YOUR_API_KEY"
      }
    }
  }
}
